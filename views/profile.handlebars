{{#each posts as |post|}}
    <div class="container">
        <h2>{{post.user.username}}</h2>
        <h3>{{post.title}}</h3>
        <p>

            {{post.body}}
        </p>

        <h4>Comments</h4>
        {{#each comments as |comment|}}
            <p><b>{{comment.user.username}}</b></p>
            <p>{{comment.body}}</p>
        {{/each}}
    </div>
{{/each}}


<footer class="fixed-bottom container text-center" style="height: 100px;">
    <a href="/create">
        <button type="button" class="new-post btn"
            style="height: 60px; width:150px; background-color:var(--brown); color:var(--white); font-weight:bold;">
            + New Post
        </button>
    </a>
</footer>